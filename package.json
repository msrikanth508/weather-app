    "styled-components": "5.2.0"
  },
  "devDependencies": {
    "@testing-library/react": "^11.0.4",
    "@types/jest": "^26.0.14",
    "@types/react": "^16.9.19",
    "@types/react-dom": "16.9.5",
    "@types/styled-components": "^5.1.3",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.12.0",
